{
  "compilerOptions": {
    "outDir": "release",
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es6", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  },
  "exclude": [
    "node_modules"
  ]
}